{erl_opts, [
    warn_export_all,
    warn_missing_spec,
    warnings_as_errors,
    debug_info
]}.
{xref_checks, [
    undefined_function_calls,
    deprecated_function_calls,
    locals_not_used
]}.
{sub_dirs, ["rel"]}.
{deps, [
    {getopt, ".*", {git, "git://github.com/jcomellas/getopt.git", {tag, "v0.8.2"}}},
    {gsm0338, "1.0", {git, "https://github.com/AntonSizov/gsm0338.git", {branch, "pure-erlang"}}},
    {oserl, ".*", {git, "git://github.com/PowerMeMobile/oserl.git", {branch, "master"}}},
    %% this MUST be here or rebar will fail to include it into escript.
    {common_lib, "3.3.4", {git, "git://github.com/PowerMeMobile/common_lib.git", {branch, "master"}}}
]}.
{escript_name, "smppload"}.
{escript_incl_apps, [
    common_lib,
    oserl,
    getopt,
    gsm0338
]}.
{eunit_opts, [verbose]}.
{cover_enabled, true}.
{cover_print_enabled, true}.
