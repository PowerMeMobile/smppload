{erl_opts, [
	warn_export_all,
	warn_missing_spec,
	warnings_as_errors,
	debug_info
]}.
{xref_checks, [
	undefined_function_calls,
	locals_not_used,
	deprecated_function_calls
]}.
{sub_dirs, ["rel"]}.
{deps, [
	{getopt, ".*", {git, "git://github.com/jcomellas/getopt.git", {tag, "v0.7.1"}}},
	{oserl, ".*", {git, "git://github.com/ten0s/oserl.git", {branch, "master"}}},
	%% this MUST be here or rebar will fail to include it into escript.
	{common_lib, "3.3.4", {git, "git://github.com/ten0s/common_lib.git", {tag, "3.3.4"}}},

	{sync, ".*", {git, "git://github.com/ten0s/sync.git", {branch, "dk_support_release"}}}
]}.
{escript_name, "smppload"}.
{escript_incl_apps, [
	common_lib,
	oserl,
	getopt
]}.
{eunit_opts, [verbose]}.
{cover_enabled, true}.
{cover_print_enabled, true}.
